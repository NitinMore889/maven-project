pipeline {
    agent any


    stages {
        stage('SCM Checkout'){
          git 'https://github.com/NitinMore889/maven-project'
        }
  }
    {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'LocalMaven') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'LocalMaven') {
                    sh 'mvn test'
                }
            }
        }

        stage ('build and sonarqube analysis') {
        steps {
        withSonarQubeEnv('sonarqube') {
	withMaven(maven : 'LocalMaven') {
        sh 'mvn clean install sonar:sonar'
                }
            }
        }
    }
  }
}
